# Make vim the default editor
export EDITOR="nano"

# Brew
export PATH="/opt/homebrew/bin:$PATH"

# Pico 2040 SDK Path
export MICROCONTROLLER_LIB_PATH="$HOME/Code/Microcontroller/LibsAndSDKs"

export PICO_LIB_PATH="$HOME/Code/Microcontroller/LibsAndSDKs/pico"

export PICO_SDK_PATH="$HOME/Code/Microcontroller/LibsAndSDKs/pico/pico-sdk"
export PICO_SDK_EXTERNAL_PATH="$HOME/Code/Microcontroller/LibsAndSDKs/pico/pico-sdk/external"
export PICO_EXTRAS_SDK_PATH="$HOME/Code/Microcontroller/LibsAndSDKs/pico/pico-extras"
export PICO_EXTRAS_SDK_EXTERNAL_PATH="$HOME/Code/Microcontroller/LibsAndSDKs/pico/pico-extras/external"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help"
# And include the parameter for ZSH
export HISTORY_IGNORE="(ls|cd|cd -|pwd|exit|date|* --help)"

# Prefer US English and use UTF-8
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Always enable colored `grep` output
export GREP_OPTIONS="--color=auto"

# Do not auto update brew
export HOMEBREW_NO_AUTO_UPDATE=1